{
  "name": "adsp_tcf_project",
  "version": "1.0.0",
  "description": "Main package file for the TCF Project",
  "author": "See repository readme",
  "scripts": {
    "setup": "npm run setup:frontend && npm run setup:backend && npm run setup:python",
    "setup:frontend": "cd frontend/ && npm ci",
    "setup:backend": "cd backend/public-api && npm ci && npm run build",
    "setup:python": "cd backend/data-science && pipenv install",
    "deploy": "docker compose up --build -d",
    "deploy:mongo": "docker compose up -d mongodb",
    "dev:backend": "docker compose up --build -d mongodb python-backend && cd backend/public-api && npm run dev",
    "dev:frontend": "cd frontend/ && npm run start",
    "dev:ds": "cd backend/data-science && pipenv run start",
    "dev:pub": "cd backend/public-api && npm run dev",
    "dev:all": "npm run deploy:mongo && npm exec --prefix backend/public-api concurrently \"npm run dev:ds\" \"npm run dev:pub\" \"npm run dev:frontend\""
  },
  "dependencies": {
    "@angular/common": "^16.2.4",
    "@angular/compiler": "^16.2.4",
    "@angular/compiler-cli": "^16.2.4",
    "@angular/core": "^16.2.4",
    "@angular/forms": "^16.2.4",
    "@angular/platform-browser": "^16.2.4",
    "@angular/platform-browser-dynamic": "^16.2.4",
    "@angular/router": "^16.2.4",
    "@tsoa/runtime": "^5.0.0",
    "angular": "^1.8.3",
    "axios": "^1.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.0",
    "firebase": "^10.3.1",
    "helmet": "^7.0.0",
    "mongoose": "^7.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "streamifier": "^0.1.1",
    "ts-node": "^10.9.1",
    "tsoa": "^5.1.1",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/firebase": "^3.2.1",
    "@types/morgan": "^1.9.5",
    "@types/streamifier": "^0.1.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.3",
    "firebase-admin": "^11.10.1"
  }
}
